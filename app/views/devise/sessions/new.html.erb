 <section class="text-ceter">
 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;
        "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
            <div class="form-outline mb-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email", class:"form-control"%>
              
            </div>

            <div class="form-outline mb-4">
            <%= f.password_field :password, autocomplete: "current-password",placeholder:"Password", class:"form-control" %>
            </div>
            
            <div class="btn btn-primary btn-block mb-4" >
            <%= f.submit "Log in" %>
           </div>
           <button class="btn btn-primary btn-block mb-4">
           <%= render "devise/shared/sign_up" %>
           </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>
