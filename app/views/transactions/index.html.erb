<div class="navbar bg-primary text-white">
  <div class="nav-btn">
    <%= link_to categories_path, class: 'btn btn-primary' do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
  </div>
  <div class="text-center px-4 fs-4">
    <h2>Transactions</h2>
  </div>
  </div>
<div class="card">
<div class="total-transactions">
  <h2>Total Amount: $<%= @total_amount %></h2>
</div>
  <div class="card-header">
    <h1 class="card-title">Transactions for <%= @category.name %></h1>
  </div>
  <div class="card-body">
    <% @category.transactions.each do |transaction| %>
      <div class="card  bg-white d-flex justify-content-between align-items-center">
        <div class="card-body border-primary">
          Name: <%= transaction.name %>
        </div>
        <div class="card-body">
        Amount: $<%= transaction.amount %>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>
<div class="fix-bottom">
    <%= link_to 'Add a new transaction', new_category_transaction_path(@category), class: "btn btn-success btn-block d-block w-100" %>
    </div>